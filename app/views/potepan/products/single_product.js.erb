$(function() {

  var variant_id = 0;

  $('.select-drop').change( function() {

    //選択されたサイズとカラーのvalue値を変数に格納
    var select_size  = $('#guiest_id3').val();
    var select_color = $('#guiest_id4').val();

    if ((select_size == 0) && (select_color == 0)) {
      variant_id = 3;
    } else if ((select_size == 1) && (select_color == 1)) {
      variant_id = 10;
    } else if ((select_size == 1) && (select_color == 2)) {
      variant_id = 11;
    } else if ((select_size == 1) && (select_color == 3)) {
      variant_id = 12;
    } else if ((select_size == 2) && (select_color == 1)) {
      variant_id = 13;
    } else if ((select_size == 2) && (select_color == 2)) {
      variant_id = 14;
    } else if ((select_size == 2) && (select_color == 3)) {
      variant_id = 15;
    } else if ((select_size == 3) && (select_color == 1)) {
      variant_id = 16;
    } else if ((select_size == 3) && (select_color == 2)) {
      variant_id = 17;
    } else if ((select_size == 3) && (select_color == 3)) {
      variant_id = 18;
    } else if ((select_size == 4) && (select_color == 3)) {
      variant_id = 19;
    }

    // 大きい方の写真を切り替え
    $.get("./3/edit_l_pic", {
      variant_id: variant_id
    }, function(data) {
      $("#picture_large").html(data);
    });

    // 小さい方の写真を切り替え
    $.get("./3/edit_s_pic", {
      variant_id: variant_id
    }, function(data) {
      $("#picture_small").html(data);
    });

  });
});
